{
  "name": "@designsbysm/vite-node",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "run-s test:types build:only",
    "build:only": "vite build",
    "format": "prettier --write src/",
    "start": "vite",
    "test": "run-s test:types test:lint test:unit",
    "test:coverage": "vitest run --coverage",
    "test:lint": "eslint src --ext ts --fix --report-unused-disable-directives",
    "test:types": "tsc --noEmit -p tsconfig.vitest.json",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@fastify/middie": "^8.3.0",
    "cors": "^2.8.5",
    "fastify": "^4.21.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/cors": "^2.8.13",
    "@types/node": "^18.16.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-istanbul": "^0.33.0",
    "eslint": "^8.45.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-node": "^3.0.2",
    "vitest": "^0.32.0"
  }
}
